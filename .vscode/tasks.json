{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Install in Signal K",
        "type": "shell",
        "command": "mkdir -p ~/.signalk/node_modules && ln -sf ${workspaceFolder} ~/.signalk/node_modules/polar-recorder && cd ~/.signalk && npm install",
        "problemMatcher": [],
        "group": "build"
      },
      {
        "label": "Restart Signal K",
        "type": "shell",
        "command": "sudo systemctl restart signalk",
        "problemMatcher": [],
        "group": "build"
      }
    ]
  }
  